{
    "name": "Word Soup",
    "version": "0.2",
    "description": "An extension that replaces words/phrases in any webpage.",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "browser_action": {
        "default_popup": "html/popup.html",
        "default_icon": {
            "128": "img/large.jpg"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "js/replacement.js"
            ],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "128": "img/large.jpg"
    },
    "options_ui": {
        "page": "html/options.html"    
    }, 
    "manifest_version": 2
}